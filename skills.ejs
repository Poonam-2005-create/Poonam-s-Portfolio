<%- include("navbar.ejs")%>
<form action="/admin/save_skills" method="post" enctype="multipart/form-data">
    <div class="container bg-info">
        <div class="row mt-4">
            <div class="col-12 mt-3">
    <h3 class="text-center">Add Skill</h3>
            </div>
            <div class="col-3 mt-3 mb-3">
                Skill Image
                <input type="file" name="skill_image"/>
            </div>
            <!-- <div class="col-2 mt-3 mb-3">
                Image Here
            </div> -->
            <div class="col-3 mt-3 mb-3">
               Skill Title
               <input type="text" name="skill_title" />
            </div>
            <div class="col-3 mt-3 mb-3">
                <br>
                <button class="btn btn-primary">Save</button>
            </div>
            </div>
            </div>
            </form>

            <div class="container bg-info">
                <div class="row mt-4">
                    <div class="col-12 mt-3">
            <h3 class="text-center">Skills List</h3>
                    </div>
                    <div class="col-12 mt-3 mb-3">
                        <table border="1" class="table-bordered table-hover table-striped" width="100%">
                            <tr>
                                <th>Action</th>
                                <th>Sr.No</th>
                                <th>Image</th>
                                <th>Title</th>
                            </tr>
                            <% skill.map((row,i)=>{ %>
                                <tr>
                                    <td>
                                        <a href="/admin/edit_skill/<%-row.skill_id%>"><button class="btn btn-warning">Edit</button></a>
                                        <a href="/admin/delete_skill/<%-row.skill_id%>"><button class="btn btn-danger">Delete</button></a>
                                    </td>
                                    <td><%-i+1%></td>
                                    <td><img src="/<%-row.skill_image%>" width="100px"/></td>
                                    <td><%-row.skill_title%></td>
                                </tr>

                          <%  }) %>
                        </table>
                    </div>
                    </div>
                    </div>
<%- include("footer.ejs")%>



