<%- include("navbar.ejs")%>

<form action="/admin/save_education" method="post">
    <div class="container bg-info">
        <div class="row mt-4">
            <div class="col-12 mt-3">
    <h3 class="text-center">Add Education</h3>
            </div>
            <div class="col-3 mt-3 mb-3">
                Enter Degree With Year
                <input type="text" name="user_degree" class="form-control"/>
            </div>
            <div class="col-3 mt-3 mb-3">
                Enter University
                <input type="text" name="user_university" class="form-control"/>
            </div>
            <div class="col-3 mt-3 mb-3">
                Enter Passing Year
                <input type="number" name="passing_year" class="form-control"/>
            </div>
            <div class="col-3 mt-3 mb-3">
                <br>
               <button class="btn btn-primary">Save</button>
            </div>   
</div>
</div>
</form>

<div class="container bg-info">
    <div class="row mt-4">
        <div class="col-12 mt-3">
<h3 class="text-center">Education List</h3>
        </div>
        <div class="col-12 mt-4 mb-3">
            <table border="1" width="100%" class="table-striped table-hover">
                <tr>
                    <th>Action</th>
                    <th>Sr.No</th>
                    <th>Degree</th>
                    <th>University</th>
                    <th>Passing Year</th>
                </tr>
                <% edu.map((row,i)=>{ %>
                <tr>
                    <td>
                        <a href="/admin/edit/<%-row.edu_id%>"><button class="btn btn-warning">Edit</button></a>
                        <a href="/admin/delete/<%-row.edu_id%>"><button class="btn btn-danger">Delete</button></a>
                    </td>
                    <td><%-i+1%></td>
                    <td><%-row.user_degree%></td>
                    <td><%-row.user_university%></td>
                    <td><%-row.passing_year%></td>
                </tr>
                <%  }) %>
            </table>
           
        </div>
        </div>
        </div>
<%- include("footer.ejs")%>